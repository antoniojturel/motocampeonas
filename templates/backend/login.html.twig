{% extends 'base.html.twig' %}
{% block title %}{% trans %}menu6{% endtrans %} - MotoCampeonas{% endblock %}
{% block tituloContenido %}{% trans %}menu6{% endtrans %}{% endblock %}
{% block subtituloContenido %}{% endblock %}

{% block cookies %}{% endblock %}
{% block cuerpocontenido %}
 {% for flash_error in app.flashes('verify_email_error') %}
     <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
 {% endfor %}
 
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container-sm">
    <form action="{{ path('app_login') }}" method="post">
    <div class="mb-3 mt-3">
    <label for="email" class="form-label">{% trans %}login1{% endtrans %}:</label>
    <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" maxlength="100" required>
    </div>
    <div class="mb-3">
    <label for="pwd" class="form-label">{% trans %}login2{% endtrans %}:</label>
    <input type="password" class="form-control" id="password" name="_password" required>
        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ path('inicio') }}"/> 
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </div>
    <button type="submit" class="btn btn-secondary btn-floating bg-light bg-opacity-50 text-black">{% trans %}menu6{% endtrans %}</button>
    </form>
    </div>
{% endblock %}