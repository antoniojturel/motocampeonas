{% extends 'base.html.twig' %}
{% block title %}{% trans %}menu6{% endtrans %} - MotoCampeonas{% endblock %}
{% block tituloContenido %}{% trans %}menu6{% endtrans %}{% endblock %}
{% block subtituloContenido %}{% endblock %}

{% block cookies %}{% endblock %}
{% block cuerpocontenido %}
 {% for flash_error in app.flashes('verify_email_error') %}
     <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
 {% endfor %}
 <h1>LOGIN</h1>
 
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="{{ path('inicio') }}"/> 
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">login</button>
    </form>
{% endblock %}